<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <%= form_for @user, url: "/login", html: {class: "form-horizontal", role: 'form'} do|f| %>
      <div class="form-group">
        <%= f.label :email, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <%= f.submit 'Login', class: "btn btn-primary" %> - <%= link_to("Yeni Kullanıcı", new_user_path, class: 'btn btn-primary') %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>