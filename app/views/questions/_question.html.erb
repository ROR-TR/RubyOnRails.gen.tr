<% cache question do %>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= question.title %>
      </div>
      <div class="panel-body">
        <%= question.content %>
        <div class="col-lg-12 text-right">
          <%= link_to 'Devamını gör', question, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>